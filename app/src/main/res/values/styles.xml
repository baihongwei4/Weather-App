<resources>

    <style name="WeatherAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAPrimary</item>
        <item name="colorPrimaryDark">@color/colorAPrimaryDark</item>
        <item name="colorAccent">@color/colorAAccent</item>
    </style>

    <color name="colorAPrimary">#99CCFF</color>
    <color name="colorAPrimaryDark">#FFFFFF</color>
    <color name="colorAAccent">#666666</color>

    <style name="WeatherAppTheme.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorAAccent</item>
    </style>

    <style name="WeatherAppTheme.Current.Primary" parent="WeatherAppTheme.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherAppTheme.Current.Secondary" parent="WeatherAppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherAppTheme.Current.Title" parent="WeatherAppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WeatherAppTheme.Current.Subtitle" parent="WeatherAppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
