<resources>

    <style name="WeatherAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeatherAppTheme.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="WeatherAppTheme.Toolbar.Title" parent="WeatherAppTheme.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WeatherAppTheme.Current.Primary" parent="WeatherAppTheme.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherAppTheme.Current.Secondary" parent="WeatherAppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatherAppTheme.Current.Title" parent="WeatherAppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WeatherAppTheme.Current.Error" parent="WeatherAppTheme.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WeatherAppTheme.Current.Subtitle" parent="WeatherAppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WeatherAppTheme.Current.Subtitle2" parent="WeatherAppTheme.Text">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="WeatherAppTheme.Current.Subtitle3" parent="WeatherAppTheme.Text">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>
</resources>
