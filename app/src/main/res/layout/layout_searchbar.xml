<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent">

    <ImageButton
        android:id="@+id/imgBtnGps"
        android:layout_width="@dimen/spacing_xl"
        android:layout_height="@dimen/spacing_xl"
        android:layout_marginStart="@dimen/spacing_m"
        android:background="@color/colorTransparent"
        android:contentDescription="@string/gps_content_description"
        android:src="@drawable/selector_gps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTxtSearh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_marginEnd="@dimen/spacing_m"
        android:autofillHints="@string/search_hint"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgBtnSearch"
        app:layout_constraintStart_toEndOf="@id/imgBtnGps"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_m"
        android:layout_marginEnd="@dimen/spacing_m"
        android:textAlignment="center"
        android:textAppearance="@style/WeatherAppTheme.Current.Title"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/editTxtSearh"
        app:layout_constraintStart_toStartOf="@id/editTxtSearh"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sydney, AU" />

    <ImageButton
        android:id="@+id/imgBtnSearch"
        android:layout_width="@dimen/spacing_xl"
        android:layout_height="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_m"
        android:background="@color/colorTransparent"
        android:src="@drawable/selector_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>